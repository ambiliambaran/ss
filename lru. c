#include <stdio.h>

int main() {
    int i, j, k, n, f, page[30], frame[10], count[10];
    int time = 0, min, pos, faults = 0, hits = 0, flag1, flag2;

    printf("Enter length of Reference String: ");
    scanf("%d", &n);

    printf("Enter Reference String: ");
    for (i = 0; i < n; i++)
        scanf("%d", &page[i]);

    printf("Enter Frame width: ");
    scanf("%d", &f);

    for (i = 0; i < f; i++) {
        frame[i] = -1;
        count[i] = 0;
    }

    printf("\nImplementing LRU:\n");
    printf("Access\t\tIn Memory\t\tFault/Hit\n");

    for (i = 0; i < n; i++) {
        flag1 = flag2 = 0;

        // Check for HIT
        for (j = 0; j < f; j++) {
            if (frame[j] == page[i]) {
                hits++;
                time++;
                count[j] = time;
                flag1 = flag2 = 1;
                break;
            }
        }

        // If MISS (page not found)
        if (flag1 == 0) {
            for (j = 0; j < f; j++) {
                if (frame[j] == -1) {
                    time++;
                    faults++;
                    frame[j] = page[i];
                    count[j] = time;
                    flag2 = 1;
                    break;
                }
            }
        }

        // If all frames full, replace LRU page
        if (flag2 == 0) {
            min = count[0];
            pos = 0;
            for (j = 1; j < f; j++) {
                if (count[j] < min) {
                    min = count[j];
                    pos = j;
                }
            }
            time++;
            faults++;
            frame[pos] = page[i];
            count[pos] = time;
        }

        // Display status
        printf("%d\t\t", page[i]);
        for (k = 0; k < f; k++) {
            if (frame[k] != -1)
                printf("%d ", frame[k]);
            else
                printf("* ");
        }

        if (flag1 == 1)
            printf("\t\tHit\n");
        else
            printf("\t\tFault\n");
    }

    printf("\nTotal Hits: %d", hits);
    printf("\nTotal Faults: %d\n", faults);

    return 0;
}