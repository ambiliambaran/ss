assume cs:code, ds:data

data segment
   msg1 db 0ah,0dh,"Enter no: $"
   msg2 db 0ah,0dh,"Division result is : $"
   msg3 db 0ah,0dh,"Quotient is : $"
   msg4 db 0ah,0dh,"Remainder is : $"
   num1 dw 0000h
   num2 dw 0000h
data ends

code segment

   print macro msg
      lea dx, msg
      mov ah, 09h
      int 21h
   endm

; Read number from user input
read proc
   xor ax, ax
   push ax
l1:
   mov ah, 01h
   int 21h
   cmp al, 0dh
   je l2
   sub al, 30h
   mov bx, ax
   mov dx, 10
   pop ax
   mul dx
   add ax, bx
   push ax
   jmp l1
l2:
   pop ax
   ret
read endp

; Display the number
display proc
   push dx
   mov bx, 10
   xor cx, cx
l3:
   xor dx, dx
   div bx
   add dl, '0'
   push dx
   inc cx
   cmp ax, 0
   jnz l3
l4:
   pop dx
   mov ah, 02h
   int 21h
   loop l4
   pop dx
   ret
display endp

; Divide procedure (Quotient and Remainder)
divide proc
   mov ax, num1
   mov bx, num2
   xor dx, dx     ; Clear DX for division (DX:AX is the dividend)
   div bx         ; AX = AX / BX, DX = AX % BX (remainder)

   ; Display Quotient
   print msg3
   call display

   ; Display Remainder
   print msg4
   mov ax, dx
   call display

   ret
divide endp

start:
   mov ax, data
   mov ds, ax
   
   print msg1
   call read
   mov num1, ax

   print msg1
   call read
   mov num2, ax

   print msg2
   call divide   ; Call division procedure

   mov ah, 4Ch
   int 21h

code ends
end start
